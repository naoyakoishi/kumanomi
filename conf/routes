# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                        controllers.Application.index()
POST    /                        controllers.Application.login()
POST    /:id/delete              controllers.Application.delete(id: Long)

# Drinks
GET     /drink/:id/              controllers.DrinkController.drink(id: Long)          
GET     /drinks/                 controllers.DrinkController.drinks()
GET     /drinks/new/             controllers.DrinkController.drinkInput()
POST    /drinks/new/             controllers.DrinkController.newDrink()
POST    /drinks/:id/delete/      controllers.DrinkController.deleteDrink(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
